<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500.0" prefWidth="800.0" styleClass="root-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.SignUpController">
   <children>
      <!-- Centered Card -->
      <AnchorPane layoutX="225" layoutY="70" prefHeight="380" prefWidth="350" styleClass="login-card">

         <children>
            <!-- Title -->
            <Text layoutX="140.0" layoutY="50.0" styleClass="form-title" text="Sign Up" />

            <!-- Full Name -->
            <Text layoutX="60.0" layoutY="90.0" styleClass="form-label" text="Full Name:" />
            <TextField fx:id="userNameTextField" layoutX="60.0" layoutY="100.0" promptText="Enter full name" styleClass="input-field" />

            <!-- Email -->
            <Text layoutX="60.0" layoutY="150.0" styleClass="form-label" text="Email:" />
            <TextField fx:id="emailTextField" layoutX="60.0" layoutY="160.0" promptText="Enter email" styleClass="input-field" />

            <!-- Password -->
            <Text layoutX="60.0" layoutY="210.0" styleClass="form-label" text="Password:" />
            <PasswordField fx:id="passwordPasswordField1" layoutX="60.0" layoutY="220.0" promptText="Enter password" styleClass="input-field" />

            <!-- Confirm Password -->
            <Text layoutX="60.0" layoutY="270.0" styleClass="form-label" text="Confirm Password:" />
            <PasswordField fx:id="passwordPasswordField2" layoutX="60.0" layoutY="280.0" promptText="Confirm password" styleClass="input-field" />

            <!-- Sign Up Button -->
            <Button fx:id="signUpButton" layoutX="60.0" layoutY="330.0" onAction="#createAccount" styleClass="signup-button-login" text="Sign Up" />

            <!-- Cancel Button -->
            <Button fx:id="cancelButton" layoutX="200.0" layoutY="330.0" onAction="#cancelButtonOnAction" styleClass="cancel-button-login" text="Cancel" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>

<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="Controllers.AddItemController"
      spacing="15"
      style="-fx-background-color: #f5f5f5; -fx-padding: 30;">

    <Label text="Add Item to Pantry"
           style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2f7a64;" />
    <Separator />

    <!-- Item Name -->
    <VBox spacing="5">
        <Label text="Item Name *" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <TextField fx:id="itemNameField" promptText="e.g., Milk" style="-fx-pref-height: 35px;" />
    </VBox>

    <!-- Quantity -->
    <VBox spacing="5">
        <Label text="Quantity *" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <TextField fx:id="quantityField" promptText="e.g., 2" style="-fx-pref-height: 35px;" />
    </VBox>

    <!-- Unit -->
    <VBox spacing="5">
        <Label text="Unit *" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <ComboBox fx:id="unitComboBox" promptText="Select unit" prefWidth="340" style="-fx-pref-height: 35px;" />
    </VBox>

    <!-- Location -->
    <VBox spacing="5">
        <Label text="Storage Location" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <ComboBox fx:id="locationComboBox" promptText="Select location" prefWidth="340" style="-fx-pref-height: 35px;" />
    </VBox>

    <!-- Category -->
    <VBox spacing="5">
        <Label text="Category" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <ComboBox fx:id="categoryComboBox" promptText="Select category" prefWidth="340" style="-fx-pref-height: 35px;" />
    </VBox>

    <!-- Expiration Date -->
    <VBox spacing="5">
        <Label text="Expiration Date *" style="-fx-font-size: 12px; -fx-font-weight: bold;" />
        <DatePicker fx:id="expiryDatePicker" promptText="Select date" prefWidth="340" style="-fx-pref-height: 35px;" />
    </VBox>

    <Separator />

    <!-- Buttons -->
    <VBox spacing="10">
        <Button text="ðŸ“· Scan Barcode" onAction="#handleScanBarcode"
                prefWidth="340" prefHeight="40"
                style="-fx-border-color: #2f7a64; -fx-border-width: 2; -fx-background-color: white; -fx-text-fill: #2f7a64; -fx-font-weight: bold;" />

        <Button text="Save Item" onAction="#handleSaveItem"
                prefWidth="340" prefHeight="45"
                style="-fx-background-color: #2f7a64; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px;" />

        <Button text="Cancel" onAction="#handleCancel"
                prefWidth="340" prefHeight="40"
                style="-fx-background-color: #e0e0e0; -fx-text-fill: #333;" />
    </VBox>

    <!-- Status Label -->
    <Label fx:id="statusLabel" wrapText="true" prefWidth="340"
           style="-fx-font-size: 13px; -fx-padding: 10; -fx-background-color: white; -fx-background-radius: 5;" />

</VBox>
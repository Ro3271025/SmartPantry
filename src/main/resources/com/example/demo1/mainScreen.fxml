<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="500" prefWidth="800" styleClass="main-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.demo1.MainScreenController">

    <children>
        <!-- Top Navbar -->
        <Text layoutX="50" layoutY="40" styleClass="brand-title" text="SmartPantry" />

        <MenuButton layoutX="620" layoutY="20" styleClass="nav-button" text="About">
            <items>
                <MenuItem text="Our Names" />
                <MenuItem text="Our Project Information" />
                <MenuItem text="Team" />
            </items>
        </MenuButton>

        <MenuButton layoutX="700" layoutY="20" styleClass="nav-button" text="Contact Us">
            <items>
                <MenuItem text="Our Email" />
                <MenuItem text="Our Names" />
                <MenuItem text="Our Phone Number" />
            </items>
        </MenuButton>

        <!-- Headline and subtext -->
        <Text layoutX="60" layoutY="150" styleClass="headline" text="Track and Manage Your Pantry Smarter" wrappingWidth="350" />

        <Text layoutX="60.0" layoutY="209.0" styleClass="subtext" text="Your personal assistant for managing groceries, saving money, and planning meals." wrappingWidth="380" />

        <!-- Buttons -->
        <Button fx:id="msLoginButton" layoutX="60" layoutY="250" onAction="#msLoginButtonOnAction" styleClass="login-button" text="Log In" />

        <Button fx:id="msSignUpButton" layoutX="160" layoutY="250" onAction="#msSignUpButtonOnAction" styleClass="signup-button" text="Sign Up" />

        <Button fx:id="ExitButton" layoutX="720" layoutY="450" onAction="#ExitButtonOnAction" styleClass="exit-button" text="Exit" />

        <!-- Footer -->
        <Text layoutX="60" layoutY="400" styleClass="footer-text" text="Launching soon on" />
        <Text layoutX="600" layoutY="400" styleClass="footer-text" text="Available now online" />
    </children>
</AnchorPane>

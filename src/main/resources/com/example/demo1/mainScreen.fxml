<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="800" styleClass="main-pane" stylesheets="@style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainScreenController">

    <children>
        <!-- Top Navbar -->
        <HBox alignment="CENTER_LEFT" layoutX="0" layoutY="0" prefWidth="800" spacing="20" style="-fx-padding: 20 50;">
            <Text styleClass="brand-title" text="SmartPantry" />
        </HBox>

        <HBox alignment="CENTER_RIGHT" layoutX="0" layoutY="0" prefWidth="800" spacing="10" style="-fx-padding: 20 50;">
            <MenuButton styleClass="nav-button" text="About">
                <items>
                    <MenuItem text="Our Names" />
                    <MenuItem text="Our Project Information" />
                    <MenuItem text="Team" />
                </items>
            </MenuButton>

            <MenuButton styleClass="nav-button" text="Contact Us">
                <items>
                    <MenuItem text="Our Email" />
                    <MenuItem text="Our Names" />
                    <MenuItem text="Our Phone Number" />
                </items>
            </MenuButton>
        </HBox>

        <!-- Main Content - Centered Vertically -->
        <VBox alignment="CENTER_LEFT" layoutX="60" layoutY="150" spacing="25">

            <!-- Headline Group (tight spacing) -->
            <VBox spacing="0">
                <Text styleClass="headline" text="Track and Manage" />
                <Text styleClass="headline" text="Your Pantry Smarter" />
            </VBox>

            <!-- Subtext Group (tight spacing) -->
            <VBox spacing="2">
                <Text styleClass="subtext" text="Your personal assistant for managing groceries," wrappingWidth="380" />
                <Text styleClass="subtext" text="saving money, and planning meals." wrappingWidth="380" />
            </VBox>

            <!-- Buttons -->
            <HBox spacing="15" style="-fx-padding: 5 0 0 0;">
                <Button fx:id="msLoginButton" onAction="#msLoginButtonOnAction" styleClass="login-button" text="Log In" />
                <Button fx:id="msSignUpButton" onAction="#msSignUpButtonOnAction" styleClass="signup-button" text="Sign Up" />
            </HBox>
        </VBox>

        <!-- Footer - Anchored to bottom -->
        <HBox alignment="CENTER" prefWidth="800" spacing="300" AnchorPane.bottomAnchor="80" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
            <Text styleClass="footer-text" text="Launching soon on" />
            <Text styleClass="footer-text" text="Available now online" />
        </HBox>

        <!-- Exit Button - Bottom right -->
        <Button fx:id="ExitButton" onAction="#ExitButtonOnAction" styleClass="exit-button" text="Exit" AnchorPane.bottomAnchor="30" AnchorPane.rightAnchor="40" />
    </children>
</AnchorPane>
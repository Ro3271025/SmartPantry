<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="600" prefWidth="900" styleClass="root-pane" stylesheets="@../CSSFiles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.LoginController">

   <children>
      <!-- Login Card -->
      <VBox fx:id="loginCard" alignment="CENTER" layoutY="-3.0" prefHeight="616.0" prefWidth="900.0" spacing="12" styleClass="login-card" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="-3.0"> <!-- Moves it slightly higher -->

         <Text styleClass="form-title" text="Login" />

         <!-- Email -->
         <Label styleClass="form-label" text="Email" />
         <TextField fx:id="usernameTextField" maxWidth="220" promptText="Enter Email" styleClass="input-field" />

         <!-- Password -->
         <Label styleClass="form-label" text="Password" />
         <PasswordField fx:id="passwordTextField" maxWidth="220" promptText="Enter Password" styleClass="input-field" />

         <!-- Buttons -->
         <Button fx:id="loginButton" maxWidth="180" onAction="#loginButtonOnAction" styleClass="login-button-login" text="Log In" />

         <Button fx:id="googleLoginButton" maxWidth="180" onAction="#googleLoginButtonOnAction" styleClass="social-button-google" text="Log in with Google" />

         <Button fx:id="LCancelButton" maxWidth="180" onAction="#LCancelButtonOnAction" styleClass="signup-button-login" text="Go Back" />
      </VBox>
   </children>
</AnchorPane>

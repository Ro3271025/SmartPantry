<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="700" prefWidth="1200" styleClass="main-pane" stylesheets="@../CSSFiles/style.css" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainScreenController">

    <!-- Top Navbar -->
    <HBox spacing="20" AnchorPane.leftAnchor="50" AnchorPane.rightAnchor="50" AnchorPane.topAnchor="20">
        <Text styleClass="brand-title" text="SmartPantry" />
        <HBox alignment="CENTER_RIGHT" spacing="20" AnchorPane.rightAnchor="50" />
    </HBox>

    <!-- Center content -->
    <VBox spacing="10" AnchorPane.leftAnchor="60" AnchorPane.topAnchor="150">
        <Text styleClass="headline" text="Track and Manage Your Pantry Smarter" wrappingWidth="400" />
        <Text styleClass="subtext" text="Your personal assistant for managing groceries, saving money, and planning meals." wrappingWidth="400" />

        <HBox spacing="10">
            <Button fx:id="msLoginButton" onAction="#msLoginButtonOnAction" styleClass="login-button" text="Log In" />
            <Button fx:id="msSignUpButton" onAction="#msSignUpButtonOnAction" styleClass="signup-button" text="Sign Up" />
        </HBox>
    </VBox>

    <!-- Footer -->
    <HBox alignment="CENTER" spacing="10" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60">
        <Text styleClass="footer-text" text="Launching soon on" />
        <Text styleClass="footer-text" text="Available now online" />
    </HBox>
     <Button fx:id="ExitButton" layoutX="1028.0" layoutY="631.0" onAction="#ExitButtonOnAction" styleClass="exit-button" text="Exit" />

      <MenuButton layoutX="1028.0" layoutY="41.0" styleClass="nav-button" text="Contact Us">
          <items>
              <MenuItem text="Our Email" />
              <MenuItem text="Our Names" />
              <MenuItem text="Our Phone Number" />
          </items>
      </MenuButton>
      <MenuButton layoutX="951.0" layoutY="41.0" styleClass="nav-button" text="About">
          <items>
              <MenuItem text="Our Names" />
              <MenuItem text="Our Project Information" />
              <MenuItem text="Team" />
          </items>
      </MenuButton>
</AnchorPane>

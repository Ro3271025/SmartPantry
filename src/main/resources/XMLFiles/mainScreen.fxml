<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.text.Text?>
<?import javafx.geometry.Insets?>

<AnchorPane prefHeight="700" prefWidth="1200" styleClass="main-pane" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Controllers.MainScreenController">

    <!-- Top Navbar -->
    <HBox alignment="CENTER_LEFT" spacing="20" AnchorPane.leftAnchor="60" AnchorPane.rightAnchor="60" AnchorPane.topAnchor="30">
        <Text styleClass="brand-title" text="SmartPantry" />

        <!-- Spacer to push nav links to the right -->
        <Region HBox.hgrow="ALWAYS" />

        <!-- Navigation Links -->
        <HBox alignment="CENTER_RIGHT" spacing="40">
            <Hyperlink styleClass="nav-link" text="About" />
            <Hyperlink styleClass="nav-link" text="Contact us" />
            <Hyperlink styleClass="nav-link" text="Pricing" />
        </HBox>
    </HBox>

    <!-- Main Content Area - Left side -->
    <VBox alignment="TOP_LEFT" spacing="15" AnchorPane.leftAnchor="60" AnchorPane.topAnchor="150">
        <Text styleClass="headline" text="Track and" />
        <Text styleClass="headline" text="Manage Your" />
        <Text styleClass="headline" text="Pantry Smarter" />

        <VBox spacing="5">
            <padding>
                <Insets top="10" />
            </padding>
            <Text styleClass="subtext" text="Your personal assistant for managing groceries," />
            <Text styleClass="subtext" text="saving money, and planning meals." />
        </VBox>

        <HBox spacing="20">
            <padding>
                <Insets top="25" />
            </padding>
            <Button fx:id="msLoginButton" onAction="#msLoginButtonOnAction" styleClass="login-button" text="Log In" prefWidth="140" prefHeight="50" />
            <Button fx:id="msSignUpButton" onAction="#msSignUpButtonOnAction" styleClass="signup-button" text="Sign Up" prefWidth="140" prefHeight="50" />
        </HBox>
    </VBox>

    <!-- Footer Section -->
    <HBox spacing="200" AnchorPane.bottomAnchor="100" AnchorPane.leftAnchor="60">
        <VBox spacing="10">
            <Text styleClass="footer-text" text="Launching soon on" />
            <HBox spacing="15">
                <Button styleClass="store-button" text="iOS" />
                <Button styleClass="store-button" text="Google Play" />
            </HBox>
        </VBox>

        <VBox spacing="10">
            <Text styleClass="footer-text" text="Available now online" />
            <Button styleClass="store-button" text="Web App" />
        </VBox>
    </HBox>

    <!-- Exit Button - Bottom Right -->
    <Button fx:id="ExitButton" onAction="#ExitButtonOnAction" styleClass="exit-button" text="Exit"
            AnchorPane.bottomAnchor="30" AnchorPane.rightAnchor="60" />

</AnchorPane>
